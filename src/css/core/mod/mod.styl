@import '../../config/default'
@import '../../mixins/*'

/*


    Standardized themeable grouping element

    Markup example:

    <div class="mod"></div>

    .mod.mod--skin.mod--banana.mod--is-clickable

*/

// themeable vars - defaults (scoping?)
$hover-outline = 2px solid $secondary-blue
$small-screen-padding = 8px
$large-screen-padding = 16px

// Override with theme
// @require 'themes.styl'

/*
.mod
  display: block
  &__hd,
  &__bd,
  &__ft
    overflow: hidden
    padding: $small-screen-padding
  &--is-clickable:focus,
  &--is-clickable:hover
    outline:$hover-outline
    outline-offset: -2px;

  // skins
  &--green
    padding:0
    &:focus,
    &:hover
      outline-color: $mint
    & .mod__bd
      background-color: $mint
  &--banana
    padding:0
    &:focus,
    &:hover
      outline-color: $banana
    & .mod__bd
      background-color: $banana
  &--green .mod__bd,
  &--banana .mod__bd
    +bp(min480)
      padding: $small-screen-padding
    +bp(min768)
      padding: $large-screen-padding

*/


.mod
  display: block
  margin: 0 0 16px 0
  padding: $small-screen-padding
  word-break: break-word
  &--is-clickable:focus,
  &--is-clickable:hover
    outline:$hover-outline
    outline-offset: -2px;
  &--skin
    padding: $small-screen-padding
    
  // skins
  &--green
    background-color: $mint
    &:focus,
    &:hover
      outline-color: $mint
  &--banana
    background-color: $banana
    &:focus,
    &:hover
      outline-color: $banana

+bp(min480)
  .mod
    margin: 0
    padding: 16px
    &--skin
      margin: 16px
      padding: $large-screen-padding

    
// Overides
.mod h1, .mod h2, .mod h3, .mod h4, .mod h5, .mod h6,
.mod ul, .mod ol,
.mod p,
.mod blockquote,
.mod .media
    margin:0;