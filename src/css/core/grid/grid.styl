.r-cols1to2 > .unit,
.r-cols1to3 > .unit,
.r-cols1to4 > .unit 
    width: $1of1
    
.r-cols2to3 > .unit,
.r-cols2to4 > .unit,
.r-cols2to5 > .unit,
.r-cols2to6 > .unit 
    width: $1of2
    
.r-cols3to6 > .unit,
.r-cols3to4 > .unit,
.r-cols3to7 > .unit 
    width: $1of3


+bp(max480)
    .r-cols2to6 > .unit:nth-child(2n + 1),
    .r-cols2to5 > .unit:nth-child(2n + 1)
        clear: both


+bp(min480 max768)
    .r-cols2to6 > .unit:nth-child(3n + 1),
    .r-cols2to5 > .unit:nth-child(3n + 1), 
    .r-cols1to4 > .unit:nth-child(2n + 1),
    .r-cols1to3 > .unit:nth-child(2n + 1)
        clear: both


+bp(min480)
    .r-cols1to3 > .unit,
    .r-cols1to4 > .unit
        width: $1of2

    .r-cols2to5 > .unit,
    .r-cols2to6 > .unit
        width: $1of3


+bp(min768)
    .r-cols1to2 > .unit
        width: $1of2
        
    .r-cols1to3 > .unit,
    .r-cols2to3 > .unit
        width: $1of3
        
    .r-cols1to4 > .unit,
    .r-cols2to4 > .unit,
    .r-cols3to4 > .unit
        width: $1of4
        
    .r-cols2to5 > .unit
        width: $1of5
        
    .r-cols2to6 > .unit
        width: $1of6
        
    .r-cols3to7 > .unit 
        width: $1of7

    .r-size1of1
        float: none
        
    .r-size1of2
        width: $1of2

    .r-size1of3 
        width: $1of3
        
    .r-size2of3 
        width: $2of3
        
    .r-size1of4 
        width: $1of4
        
    .r-size3of4 
        width: $3of4
        
    .r-size1of5 
        width: $1of5
 
    .r-size2of5
        width: $2of5
        
    .r-size3of5 
        width: $3of5
 
    .r-size4of5 
        width: $4of5
 
    .r-size1of6 
        width: $1of6
 
    .r-size5of6
        width: $5of6

    .r-cols1to2 > .unit:nth-child(2n + 1),
    .r-cols1to3 > .unit:nth-child(3n + 1),
    .r-cols2to3 > .unit:nth-child(3n + 1),
    .r-cols1to4 > .unit:nth-child(4n + 1),
    .r-cols2to4 > .unit:nth-child(4n + 1),
    .r-cols3to4 > .unit:nth-child(4n + 1),
    .r-cols2to5 > .unit:nth-child(5n + 1),
    .r-cols2to6 > .unit:nth-child(6n + 1) 
        clear: both


+bp(max768)
    .r-cols3to4 .unit:nth-child(3n + 1),
    .r-cols2to4 .unit:nth-child(2n + 1),
    .r-cols2to3 .unit:nth-child(2n + 1) 
        clear: both


