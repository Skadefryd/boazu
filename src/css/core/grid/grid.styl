@require "../../mixins/breakpoints.styl";

$1of1 = 100%
$1of2 = 50%
$1of3 = 33.3333333%
$2of3 = 66.6666666%
$1of4 = 25%
$3of4 = 75%
$1of5 = 20%
$2of5 = 40%
$3of5 = 60%
$4of5 = 80%
$1of6 = 16.6666666%
$5of6 = 83.3333333%
$1of7 = 14.2857142%

// TODO: Find alternatives to overflow-hidden grid
.grid
    overflow: hidden
    *overflow: visible
    *zoom: 1
        
.unit      
    float: left

.size1of1 
    float: none

.size1of2
    width: $1of2
    
.size1of3 
    width: $1of3
    
.size2of3 
    width: $2of3
    
.size1of4 
    width: $1of4
    
.size3of4
    width: $3of4
    
.size1of5 
    width: $1of5
    
.size2of5 
    width: $2of5
    
.size3of5
    width: $3of5
    
.size4of5 
    width: $4of5

.size1of6 
    width: $1of6
    
.size5of6 
    width: $5of6

.r-size1of1,
.r-size1of2,
.r-size1of3,
.r-size2of3,
.r-size1of4,
.r-size3of4,
.r-size1of5,
.r-size2of5,
.r-size3of5,
.r-size4of5,
.r-size1of6,
.r-size5of6
    width: $1of1 

/*
