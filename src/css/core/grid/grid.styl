@require '../../config/default'
@require "../../mixins/breakpoints.styl";


// TODO: Alternatives to overflow-hidden grid

.grid, .line
    overflow: hidden

    &__unit
        float: left


/* Sizes that can be put straight onto units */

.size1of1
    float: none

.size1of2
    width: $1of2

.size1of3
    width: $1of3

.size2of3
    width: $2of3

.size1of4
    width: $1of4

.size3of4
    width: $3of4

.size1of5
    width: $1of5

.size2of5
    width: $2of5

.size3of5
    width: $3of5

.size4of5
    width: $4of5

.size1of6
    width: $1of6

.size5of6
    width: $5of6


/* Predefined responsive unit sizes (Collapses to 1 column below 768) */

.r-size1of1,
.r-size1of2,
.r-size1of3,
.r-size2of3,
.r-size1of4,
.r-size3of4,
.r-size1of5,
.r-size2of5,
.r-size3of5,
.r-size4of5,
.r-size1of6,
.r-size5of6
    width: $1of1

+bp(min768)
    .r-size1of1
        float: none

    .r-size1of2
        width: 50%

    .r-size1of3
        width: 33.33333%

    .r-size2of3
        width: 66.66666%

    .r-size1of4
        width: 25%

    .r-size3of4
        width: 75%

    .r-size1of5
        width: 20%

    .r-size2of5
        width: 40%

    .r-size3of5
        width: 60%

    .r-size4of5
        width: 80%

    .r-size1of6
        width: 16.6666666%

    .r-size5of6
        width: 83.3333333%
