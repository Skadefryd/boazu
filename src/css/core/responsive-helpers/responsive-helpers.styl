@require "../../mixins/breakpoints";
/*


        Responsive helper classes

        Should prob. be generated from the defined breakpoints (?)


*/
.leftify-lt768
    text-align: left !important

.rightify-lt768
    text-align: right !important

.centerify-lt768
    text-align: center !important

.fleft-lt768
    float: left !important

.fright-lt768
    float: right !important


+bp(max768)
    .show-gt768,
    .hide-lt768
        display: none !important


+bp(min768)
    .leftify-gt768
        text-align: left !important

    .rightify-gt768
        text-align: right !important

    .centerify-gt768
        text-align: center !important

    .fleft-gt768
        float: left !important

    .fright-gt768
        float: right !important

    .hide-gt768,
    .show-lt768
        display: none !important


+bp(max480)
    .show-gt480,
    .hide-lt480
        display: none !important

+bp(max640)
    .hide-lt640
        display: none !important

+bp(max900)
    .hide-lt900
        display: none !important

+bp(max1235)
    .hide-lt1235
        display: none !important

+bp(min480)
    .hide-gt480
        display: none !important

+bp(min640)
    .hide-gt640
        display: none !important

+bp(min900)
    .hide-gt900
        display: none !important

+bp(min1235)
    .hide-gt1235
        display: none !important
