@require "../../mixins/breakpoints.styl";

s-1of1 = 100%
s-1of2 = 50%
s-1of3 = 33.3333333%
s-2of3 = 66.6666666%
s-1of4 = 25%
s-3of4 = 75%
s-1of5 = 20%
s-2of5 = 40%
s-3of5 = 60%
s-4of5 = 80%
s-1of6 = 16.6666666%
s-5of6 = 83.3333333%
